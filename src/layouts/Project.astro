---
import { Icon } from 'astro-icon';

import Base from './Base.astro';

const title = Astro.props.title || Astro.props.content.title;
---

<style>
  html, body {
    min-height:100%;
  }

  header, footer {
    background-color:#424d83;
  }

	#logo {
		height:48px;
	}

	aside {
		flex-grow: 0;
		flex-shrink: 0;
		flex-basis: 380px;
		padding-right: 50px;
	}

	aside .image-wrapper {
		border-radius: 3px;
		position: relative;
	}

	aside .image-wrapper img {
		position: relative;
		border-radius: 4px;
		z-index: 2;
	}

	aside .image-wrapper::after {
		content: '';
		z-index: 1;
		position: absolute;
		top: 8%;
		left: 8%;
		width: 84%;
		height: 84%;
		box-shadow: 0 5px 60px 10px rgba(0, 0, 0, 0.2), 0 -2px 25px 10px rgba(0, 0, 0, 0.3);
	}

  footer h4 {
		font-weight:bold;
	}

	[astro-icon] {
    display:inline;
  }
  
	h2 [astro-icon] {
		height:20px;
		margin-right:0;
		vertical-align:text-bottom;
	}

	footer [astro-icon] {
		height:20px;
		padding-right:6px;
		vertical-align:text-top;
	}
</style>

<Base title={title}>
  <header>
    <nav class="container mx-auto px-10 text-right text-white py-5 flex justify-between items-center">
			<a href="/">
				<img class="hidden md:inline-block" alt="rainersimon.io" class="inline" id="logo" src="/assets/img/splash-logo.svg">
			</a>
      <ul>
        <li><a href="/">Home</a></li>
      </ul>
    </nav>
	</header>

  <main class="container mx-auto px-10 py-8 md:py-20 flex text-gray-800">
		<aside>
			<div class="image-wrapper">
				<img src={Astro.props.content.image} />
			</div>
		</aside>

    <article class="project max-w-screen-md text-lg">
			<h1 class="pb-1 text-3xl">{Astro.props.content.title}</h1>

			<h2 class="text-steel-light pb-1">
				<Icon name="ci:external-link" />
				<a class="text-base" href={`https://${Astro.props.content.url}`} target="_blank">{Astro.props.content.url}</a>
			</h2>

			<h2 class="pb-12 text-gray-500 text-sm">
				{Astro.props.content.client}
			</h2>

			<slot />
			
		</article>
  </main>

  <footer>
    <section class="container mx-auto px-10 pt-6 text-white leading-8">
			<div class="grid grid-cols-2 md:grid-cols-3 gap-14 pb-12">
				<div>
					<h4>COMPANY</h4>
					<ul>
						<li><a href="/imprint">Imprint</a></li>
						<li><a href="/assets/files/rainersimon_terms_202206.pdf" target="_blank">Terms<span class="hidden md:inline"> & Conditions</span></a></li>
						<li><a href="/contact">Contact</a></li>
					</ul>
				</div>

				<div>
					<h4>SOCIAL</h4>
					<ul>
						<li>
							<Icon name="fontisto:github" /> 
							<a href="https://github.com/rsimon" target="_blank">Github</a>
						</li>
						
						<li>
							<Icon name="iconoir:twitter" />
							<a href="https://twitter.com/aboutgeo" target="_blank">Twitter</a>
						</li>

						<li>
							<Icon name="simple-icons:observable" />
							<a href="https://observablehq.com/@rsimon" target="_blank">Observable</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="flex justify-between pt-2 md:pt-4 pb-8 border-t">
				<p>&copy; Rainer Simon, 2022</p>

				<p class="hidden md:inline-block">Servion Theme |
					<a class="font-bold" href="https://themewagon.com/" target="_blank">ThemeWagon</a>
				</p>
			</div>
		</section>
  </footer>
</Base>
