---
import '../styles/global.css';

const { title } = Astro.props;
---
<html lang="en-US" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#ffffff">

    <title>{title ? `rainersimon.io | ${title}` : 'rainersimon.io'}</title>

    <link rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicons/favicon.ico">
    <link rel="manifest" href="assets/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="assets/img/favicons/mstile-150x150.png">

    <meta name="description" content="Digital Humanities / IIIF / UX / Open Source" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@aboutgeo" />
    <meta name="twitter:title" content={title ? `rainersimon.io | ${title}` : 'rainersimon.io'} />
    <meta name="twitter:description" content="Digital Humanities / IIIF / UX / Open Source" />
    <meta name="twitter:image" content="https://rainersimon.io/assets/img/social-preview.png" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title ? `rainersimon.io | ${title}` : 'rainersimon.io'} />
    <meta property="og:description" content="Digital Humanities / IIIF / UX / Open Source" />
    <meta property="og:image" content="https://rainersimon.io/assets/img/social-preview.png" />
    <meta property="og:image:width" content="1600" />
    <meta property="og:image:height" content="900" />
    <meta property="og:url" content="https://rainersimon.io/" />

    <link href="/assets/fonts/fonts.css" rel="stylesheet">

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Person",
        "name": "Rainer Simon",
        "familyName": "Simon",
        "givenName": "Rainer",
        "brand": "rainersimon.io",
        "description": "Rainer Simon is a senior software engineer and freelance developer who specializes in the design of tools that help Digital Humanities researchers and cultural heritage professionals explore, analyze and manage data more easily.",
        "url": "https://rainersimon.io",
        "jobTitle": "Software Engineer",
        "workLocation": "Vienna, Austria",
        "gender": "male",
        "image": "https://rainersimon.io/assets/img/rainer.jpg",
        "sameAs": [
            "https://twitter.com/aboutgeo",
            "https://github.com/rsimon",
            "https://observablehq.com/@rsimon"
        ]
      }
    </script>
  </head>
  <body class="text-neutral-800">
    <slot />
  </body>
</html>