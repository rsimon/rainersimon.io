---
import '../styles/global.css';

const { title } = Astro.props;

---
<html lang="en-US" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#ffffff">

    <title>{title ? `Rainer Simon | ${title}` : 'Rainer Simon - Digital Humanities Software Developer | IIIF, Annotation Tools & UX Consulting'}</title>

    <link rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicons/favicon.ico">
    <link rel="manifest" href="assets/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="assets/img/favicons/mstile-150x150.png">

    <meta name="description" content="Expert Digital Humanities software development and IIIF consulting. 15+ years experience building tools for museums, libraries, and DH researchers. Based in Vienna, Austria.">
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@aboutgeo" />
    <meta name="twitter:title" content={title ? `rainersimon.io | ${title}` : 'rainersimon.io'} />
    <meta name="twitter:description" content="Digital Humanities / IIIF / UX / Open Source" />
    <meta name="twitter:image" content="https://rainersimon.io/assets/img/social-preview.png" />
    <meta name="twitter:url" content="https://rainersimon.io" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title ? `rainersimon.io | ${title}` : 'rainersimon.io'} />
    <meta property="og:description" content="Digital Humanities / IIIF / UX / Open Source" />
    <meta property="og:image" content="https://rainersimon.io/assets/img/social-preview.png" />
    <meta property="og:image:width" content="1600" />
    <meta property="og:image:height" content="900" />
    <meta property="og:url" content="https://rainersimon.io" />

    <link rel="canonical" href="https://rainersimon.io" />

    <link href="/assets/fonts/fonts.css" rel="stylesheet">

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Rainer Simon Digital Humanities Consulting",
        "description": "Software development for digital humanists",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Vienna",
          "addressCountry": "AT"
        },
        "founder": {
          "@type": "Person",
          "name": "Rainer Simon"
        },
        "image": "https://rainersimon.io/assets/img/rainer.jpg",
        "sameAs": [
            "https://github.com/rsimon",
            "https://bsky.app/profile/aboutgeo.bsky.social",
            "https://hcommons.social/@aboutgeo",
            "https://www.linkedin.com/in/rainersimon/"
        ]
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Rainer Simon - Digital Humanities Consulting",
        "url": "https://rainersimon.io",
        "potentialAction": {
          "@type": "SearchAction",
          "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://rainersimon.io/?q={search_term_string}"
          }
        }
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://rainersimon.io"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Contact",
            "item": "https://rainersimon.io/contact"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Imprint",
            "item": "https://rainersimon.io/imprint"
          }
        ]
      }
    </script>
  </head>
  <body class="text-neutral-800">
    <slot />
  </body>
</html>