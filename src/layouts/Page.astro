---
import { ArrowRight } from 'lucide-react';
import { Icon } from 'astro-icon/components';

import Base from './Base.astro';

const title = Astro.props.title || Astro.props.content.title;

const year = new Date().getFullYear();
---
<Base title={title}>
  <header class="bg-steel">
    <nav class="container mx-auto px-10 text-right text-white py-5 flex justify-between items-center">
			<a href="/">
				<img 
					class="hidden h-12 md:inline-block" 
					alt="rainersimon.io"
					src="/assets/img/splash-logo.svg">
			</a>
      <ul>
        <li><a href="/">Home</a></li>
      </ul>
    </nav>
	</header>

  <main class="container mx-auto px-10 py-10 md:py-20">
    <slot />
  </main>

  <footer class="bg-steel">
    <section class="container mx-auto px-10 pt-6 text-white leading-8">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-14 pb-12">
				<div>
					<h4 class="font-bold">COMPANY</h4>
					<ul>
						<li><a href="/imprint" class="hover:underline">Imprint</a></li>
						<li><a href="/assets/files/rainersimon_terms_202206.pdf" class="hover:underline" target="_blank">Terms<span class="hidden md:inline"> & Conditions</span></a></li>
						<li><a href="/contact" class="hover:underline">Contact</a></li>
					</ul>
				</div>

				<div>
					<h4 class="font-bold">SOCIAL</h4>
					<ul>
						<li class="flex items-center gap-3">
							<Icon name="fontisto:github" /> 
							<a href="https://github.com/rsimon" class="hover:underline" target="_blank">Github</a>
						</li>

						<li class="flex items-center gap-3">
							<Icon name="simple-icons:linkedin" />
							<a href="https://www.linkedin.com/in/rainersimon/" class="hover:underline" target="_blank">LinkedIn</a>
						</li>

						<li class="flex items-center gap-3">
							<Icon name="simple-icons:bluesky" />
							<a rel="me" href="https://bsky.app/profile/aboutgeo.bsky.social" class="hover:underline" target="_blank">Bluesky</a>
						</li>

						<li class="flex items-center gap-3">
							<Icon name="simple-icons:mastodon" />
							<a rel="me" href="https://hcommons.social/@aboutgeo" class="hover:underline" target="_blank">Mastodon</a>
						</li>
					</ul>
				</div>

				<div class="w-full space-y-1 col-span-2">
          <h4 class="font-bold">NEWSLETTER</h4>
					<p class="text-sm">
						Sign up to stay up to date with my work. 
						<span class="text-white/60 block">Sent max. 4x per year.</span>
					</p>

					<form
						class="max-w-64 flex bg-white rounded mt-3 text-sm"
						action="https://buttondown.com/api/emails/embed-subscribe/aboutgeo"
						method="post">
						<input 
							class="py-1 w-full text-steel px-2 rounded-l border border-white placeholder:text-steel"
							type="email" 
							name="email" 
							id="bd-email"
							placeholder="Enter your e-mail..." />

						<div class="border border-white rounded-r flex">
							<button 
								type="submit"
								class="bg-steel p-1.5 rounded cursor-pointer">
								<ArrowRight />
							</button>
						</div>
					</form>
			  </div>
			</div>

			<div class="flex justify-between pt-2 md:pt-4 pb-8 border-t">
				<p>&copy; Rainer Simon, {year}</p>

				<p class="hidden md:inline-block">
					Site built with <a href="https://astro.build/" class="hover:underline" target="_blank">Astro</a> Â· 
					<a href="https://themewagon.com/" class="hover:underline" target="_blank">Servion Theme</a>
				</p>
			</div>
		</section>
  </footer>
</Base>
