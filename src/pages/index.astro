---
import { Icon } from 'astro-icon/components';

import Base from '../layouts/Base.astro';

const year = new Date().getFullYear();
---
<style>
	header {
		background-image:url(/assets/img/splash-header-bg.svg);
		background-position:bottom;
		background-size:cover;
	}

	footer {
		background-image:url(/assets/img/splash-footer-bg.svg);
		background-position:top;
		background-size:cover;
	}

	footer h4 {
		font-weight:bold;
	}

	footer li {
		align-items: center;
    display: flex;
		gap: 0.75rem;
    padding-right: 6px;
  }
	
	footer a:hover {
		text-decoration:underline;
	}
</style>

