---
import { Icon } from 'astro-icon/components';

import Base from '../layouts/Base.astro';

const year = new Date().getFullYear();
---
<style>
	header {
		background-image:url(/assets/img/splash-header-bg.svg);
		background-position:bottom;
		background-size:cover;
	}

	footer {
		background-image:url(/assets/img/splash-footer-bg.svg);
		background-position:top;
		background-size:cover;
	}

	footer h4 {
		font-weight:bold;
	}

	footer li {
		align-items: center;
    display: flex;
		gap: 0.75rem;
    padding-right: 6px;
  }
	
	footer a:hover {
		text-decoration:underline;
	}


	/* Accordion (Shadcn-like) styles */
	.accordion-item {
		border-bottom: 1px solid #e5e7eb;
	}

	.accordion-trigger {
		justify-content: space-between;
		width: 100%;
		padding: 1rem 0;
		background: transparent;
		border: none;
		cursor: pointer;
	}

	.accordion-trigger .title {
		font-size: 1.125rem;
		font-weight: 600;
	}

	.accordion-trigger .summary {
		display: block;
		font-size: 0.95rem;
		color: #374151;
		margin-top: 0.25rem;
	}

	.chevron {
		width: 1.25rem;
		height: 1.25rem;
		transition: transform 0.2s ease;
		flex-shrink: 0;
	}

	.accordion-trigger[aria-expanded="true"] .chevron {
		transform: rotate(180deg);
	}

	.accordion-content {
		overflow: hidden;
		max-height: 0;
		transition: max-height 0.28s ease-in-out;
		padding-bottom: 0;
	}

	.accordion-content.open {
		padding-bottom: 1rem;
	}

	.service-bullets {
		padding-left: 1.25rem;
	}

	.service-bullets li {
		margin-bottom: 0.5rem;
		list-style-type: disc;
	}
</style>

